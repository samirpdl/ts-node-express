{
  "name": "ts-node-express-api",
  "version": "1.0.0",
  "description": "TypeScript Node Express API Starter Project",
  "scripts": {
    "precommit": "lint-staged",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,js}'; exit 0",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.ts'; exit 0",
    "codecov": "cat coverage/*/lcov.info | codecov",
    "transpile": "tsc",
    "clean": "rimraf dist",
    "build": "NODE_ENV=production run-s clean transpile",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "migrate:rollback": "knex migrate:rollback",
    "test": "NODE_ENV=test mocha --recursive test/**/*.test.ts",
    "test:unit": "NODE_ENV=test mocha --recursive test/unit/**/*.test.ts",
    "test:api": "NODE_ENV=test mocha --recursive test/api/**/*.test.ts",
    "test:watch": "NODE_ENV=test mocha --watch --recursive test/**/*.test.ts",
    "test:coverage": "NODE_ENV=test istanbul cover node_modules/mocha/bin/_mocha -- --recursive --require babel-register --colors --reporter spec test",
    "watch": "tsc --watch",
    "start": "nodemon",
    "prettify": "prettier --single-quote --write \"src/**/*.{ts,js,json}\""
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --single-quote --write",
      "tslint --fix -c tslint.json 'src/**/*.{ts,js}'; exit 0",
      "git add"
    ]
  },
  "keywords": [
    "typescript",
    "javascript",
    "node",
    "express",
    "rest",
    "api",
    "starter"
  ],
  "private": true,
  "authors": [
    "Sameer Poudel <samir@samirpdl.com.np>"
  ],
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.3",
    "boom": "^7.3.0",
    "camelize": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "http-status-codes": "^1.1.6",
    "joi": "^14.3.0",
    "js-snakecase": "^1.2.0",
    "knex": "0.16.2",
    "lodash": "^4.17.11",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "ts-node": "^7.0.1",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/helmet": "^0.0.42",
    "@types/joi": "^14.0.1",
    "@types/knex": "^0.15.1",
    "@types/lodash": "^4.14.119",
    "@types/mocha": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.12.14",
    "@types/nodemailer": "^4.6.5",
    "@types/serve-favicon": "^2.2.30",
    "@types/supertest": "^2.0.7",
    "@types/winston": "^2.4.4",
    "babel-register": "^6.24.1",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "eslint": "^5.10.0",
    "husky": "^1.2.0",
    "istanbul": "1.1.0-alpha.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.1",
    "supertest": "^3.3.0",
    "tsc": "^1.20150623.0",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  }
}
